<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>


<AnchorPane prefHeight="200.0" prefWidth="300.0" styleClass="progress_edit_container"
            stylesheets="@../../styles/ProgressEditScreen.css" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1">
   <VBox prefHeight="40.0" prefWidth="300.0" styleClass="progress_edit_top_bar" AnchorPane.topAnchor="0.0">
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Progress Edit Screen"/>
   </VBox>
   <VBox fillWidth="false" layoutY="40.0" prefHeight="100.0" prefWidth="300.0" styleClass="progress_edit_form_container"
         AnchorPane.topAnchor="50.0">
      <Slider fx:id="progress_slider"/>
      <HBox prefHeight="50.0" prefWidth="200.0">
         <TextField fx:id="progress_fld" text="0"/>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="\%"/>
      </HBox>
      <Button fx:id="save_btn" mnemonicParsing="false" text="Save"/>
   </VBox>
</AnchorPane>
